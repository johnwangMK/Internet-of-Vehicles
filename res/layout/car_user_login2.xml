<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Login_Layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f2"
    android:orientation="vertical"
    tools:context=".LoginActivity" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:background="@color/blue" >

        <TextView
            android:id="@+id/register_phone_login2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="登    录"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        </RelativeLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_picture"
        android:layout_gravity="top|center"
        android:id="@+id/image_logo"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
       	android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/login_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/login_phone" />

            <EditText
                android:background="@null"
                android:id="@+id/user_cellphoneNo2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="请输入手机号"
                android:textColorHint="#B2B2B2"
                android:textSize="14sp"/><!-- 灰色*/ -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/login_lock" />

            <EditText
                android:background="@null"
                android:id="@+id/user_password2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="请输入密码"
                android:password="true"
                android:textColorHint="#B2B2B2"
                android:textSize="14sp"/>            
        </LinearLayout>
        
    </LinearLayout>

    <RelativeLayout
		android:layout_width="match_parent"
        android:layout_height="25dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:background="#f2f3f2"
        android:layout_marginTop="5dip"
        android:orientation="vertical" >       
        
		<LinearLayout
		    android:layout_width="142dip"
		    android:layout_height="wrap_content"
		    android:background="#ffffff" >
		    <CheckBox
		        android:id="@+id/cb_rememberPassword2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
		        android:text="记住我"
		        android:textColor="#c0c0c0"
		        android:textSize="12sp" />
		</LinearLayout>

		<Button
			android:id="@+id/forget_password2"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="80dip"
			android:layout_height="25dip"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:background="#f2f3f2"			
			android:text="忘记密码"
			android:textColor="#454545"
			android:textSize="12dp" />
		</RelativeLayout>
        
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"          
        android:layout_marginTop="5dip"
        android:orientation="vertical" >   
        
		<Button
        	android:id="@+id/user_login_btn2"
        	android:layout_width="fill_parent"
        	android:layout_height="40dip"      	
        	android:background="@color/blue"
        	android:text="登      录"
        	android:textColor="#FFFDFB"
        	android:textSize="16sp" />
        
		<RelativeLayout
        	android:id="@+id/rl2"        
        	android:layout_width="wrap_content"
        	android:layout_height="25dp"
        	android:background="#ffffff"
        	android:gravity="center_vertical"
        	android:layout_marginTop="4dip">
        	<ImageView
            	android:id="@+id/iv1"
            	android:layout_width="16dp"
            	android:layout_height="16dp"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="5dip"
            	android:src="@drawable/login_plus" />
        	<TextView
            	android:id="@+id/textv"
            	android:layout_width="wrap_content"
            	android:layout_height="22dp"
            	android:textColor="#B2B2B2"
            	android:layout_toRightOf="@+id/iv1"
            	android:gravity="center_vertical"
            	android:layout_marginLeft="5dp"
            	android:text="没有账号" 
            	android:textSize="14dp"/>
        	<Button
            	android:id="@+id/user_register_btn2"
            	android:layout_width="72dp"
            	android:layout_height="22dp"
            	android:gravity="center_vertical"
            	android:layout_alignBaseline="@+id/textv"
            	android:layout_alignBottom="@+id/textv"
            	android:layout_toRightOf="@+id/textv"
            	android:background="@drawable/login_btn_register"
            	android:text="点此注册"
            	android:textColor="@color/blue"
            	android:textSize="14dp"/>
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>