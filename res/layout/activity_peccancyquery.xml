<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PeccancyqueryActivity" >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/img_back_weizhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goback"  />

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.77"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="违章查询"
                android:textSize="20sp" />
        </LinearLayout>

        
    </LinearLayout>
<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_marginBottom="7.5dip"
                android:background="@color/huise"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rbTongZhi"
                    android:layout_width="0.0dip"
                    android:layout_height="30.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/radio_topic_all_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="我的车辆"
                    android:textColor="@drawable/wp_text_selector"
                    android:textSize="15.0sp" />

                <RadioButton
                    android:id="@+id/rbDongTai"
                    android:layout_width="0.0dip"
                    android:layout_height="30.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/radio_topic_all_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="其它车辆"
                    android:textColor="@drawable/wp_text_selector"
                    android:textSize="15.0sp" />

            </RadioGroup>
        </RelativeLayout>
            <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/huise" />
<FrameLayout
        android:id="@+id/querypeccancy_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.43"
        android:orientation="vertical" >

    </FrameLayout>
</LinearLayout>
