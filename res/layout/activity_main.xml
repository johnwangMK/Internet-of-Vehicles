<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    


   <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.43"
        android:orientation="vertical" >

    </FrameLayout>
	<ImageView   
        android:layout_width="fill_parent"  
        android:layout_height="1dp"  
        android:background="#ffffff"  
        /> 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/login_bottom_background"
        android:orientation="horizontal" >
        
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/btn_home"
                android:gravity="center|bottom"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="主页"
                android:textColor="@drawable/navigate_textcolor"
                android:textSize="14sp" />

            

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/btn_nearby"
                android:gravity="center|bottom"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="附近"
                android:textColor="@drawable/navigate_textcolor"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/btn_mesaage"
                android:gravity="center|bottom"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="消息"
                android:textColor="@drawable/navigate_textcolor"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/btn_mine"
                android:gravity="center|bottom"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="我的"
                android:textColor="@drawable/navigate_textcolor"
                android:textSize="14sp" />


        </RadioGroup>
        
        
        
    </LinearLayout>
</LinearLayout>
